<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToolBar?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.HekimController">
	<left>
		<VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="137.0"
			BorderPane.alignment="CENTER">
			<children>
				<ImageView fitHeight="150.0" fitWidth="200.0"
					pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@../images/dr.png" />
					</image>
				</ImageView>
				<Button maxWidth="200.0" mnemonicParsing="false" text="Reçete Oluştur"
					fx:id="btnReceteOlustur" onAction="#btnReceteOlusturOnAction">
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button maxWidth="200.0" mnemonicParsing="false" text="Hastaları Listele"
					onAction="#btnHastaListesiOnAction">
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button maxWidth="200.0" mnemonicParsing="false" text="Hastalar Düzenle"
					onAction="#btnHastaDuzenleOnAction">
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button maxWidth="200.0" mnemonicParsing="false" text="Yazılmış Reçeteler"
					onAction="#btnYazilmisRecetelerOnAction">
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button maxWidth="200.0" mnemonicParsing="false" text="Tanılar"
					onAction="#btnTanilarOnAction">
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button maxWidth="200.0" mnemonicParsing="false" text="İlaçlar"
					onAction="#btnIlaclarOnAction">
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</Button>
			</children>
		</VBox>
	</left>
	<center>
		<TableView fx:id="tvHekimEkrani" prefHeight="200.0"
			prefWidth="200.0" BorderPane.alignment="CENTER">
		</TableView>
	</center>
</BorderPane>
